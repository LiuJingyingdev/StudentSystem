<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.studentsystem">

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@drawable/student_user"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="学生系统">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddStudent"
            android:label="添加学生信息" />
        <activity
            android:name=".DeleteStudent"
            android:label="删除学生信息" />
        <activity
            android:name=".UpdateStudent"
            android:label="更新学生信息" />
        <activity
            android:name=".QueryStudent"
            android:label="查询学生信息" />
        <activity android:name=".UpdateStudentTwo"></activity>
    </application>

</manifest>